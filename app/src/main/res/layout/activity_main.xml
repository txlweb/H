<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="骑士内核启动器"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="版本240705 骑士免费内核 @ 乐鹏"
        android:textAlignment="center"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="227dp"
        app:srcCompat="@drawable/ic" />

    <Button
        android:id="@+id/st_shsu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/dialog_holo_dark_frame"
        android:backgroundTint="@color/teal_700"
        android:text="获取权限"
        android:visibility="invisible" />

    <Button
        android:id="@+id/upda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/dialog_holo_dark_frame"
        android:backgroundTint="@color/purple_200"
        android:text="下载最新辅助"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <Button
        android:id="@+id/QX_kernel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/dialog_holo_dark_frame"
        android:backgroundTint="@color/purple_200"
        android:baselineAligned="false"
        android:text="安装驱动" />

    <Button
        android:id="@+id/st_nh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/dialog_holo_dark_frame"
        android:backgroundTint="@color/purple_200"
        android:text="启动辅助(无后台)"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <Button
        android:id="@+id/Start_lh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="启动辅助(创建bash进程)"
        android:visibility="invisible" />

    <Switch
        android:id="@+id/switch3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:showText="true"
        android:text="游戏选择"
        android:textAlignment="viewStart"
        android:textOff="和平"
        android:textOn="PUBG"
        android:textSize="20sp"
        android:textStyle="bold"
        android:thumbTint="#FFFFFF"
        android:track="@drawable/btn"
        android:trackTint="#3F51B5"
        android:visibility="visible" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="true"
        android:showText="true"
        android:text="驱动选择"
        android:textAlignment="viewStart"
        android:textOff="GT"
        android:textOn="QX     "
        android:textSize="20sp"
        android:textStyle="bold"
        android:thumbTint="#FFFFFF"
        android:track="@drawable/btn"
        android:trackTint="#3F51B5"
        android:visibility="visible" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="true"
        android:showText="true"
        android:text="防录屏"
        android:textAlignment="viewStart"
        android:textOff="关闭  "
        android:textOn="开启"
        android:textSize="20sp"
        android:textStyle="bold"
        android:thumbTint="#FFFFFF"
        android:track="@drawable/btn"
        android:trackTint="#E91E63" />

</LinearLayout>